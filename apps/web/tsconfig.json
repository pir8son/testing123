{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@repo/shared/*": [
        "../../packages/shared/src/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
